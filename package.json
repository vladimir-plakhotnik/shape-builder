{
    "name": "shape-builder",
    "version": "0.0.1",
    "description": "A library to draw shapes and text in JavaScript.",
    "main": "dist/shape-builder.node.js",
    "browser": "dist/shape-builder.min.js",
    "files": [
        "dist",
        "types/index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "typings": "types/index.d.ts",
    "types": "types/index.d.ts",
    "keywords": [
        "shapes",
        "drawing"
    ],
    "license": "MIT",
    "author": "Vladimir Plakhotnik",
    "repository": {
        "type": "git",
